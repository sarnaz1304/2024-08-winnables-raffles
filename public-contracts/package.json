    "mine:start": "hardhat --network localhost run scripts/demo/mine.js",
    "mine:stop": "hardhat --network localhost run scripts/demo/stop-mine.js",
    "raffle": "hardhat --network localhost run scripts/demo/createRaffle.js",
    "getRaffle": "hardhat --network localhost run scripts/getRaffle.js",
    "ticket": "hardhat --network localhost run scripts/demo/buyTickets.js",
    "role": "hardhat --network localhost run scripts/grantRole.js",
    "draw": "hardhat --network localhost run scripts/demo/drawWinner.js",
    "supply": "hardhat --network localhost run scripts/demo/checkSupply.js",
    "getRoles": "hardhat --network localhost run scripts/getRoles.js",
    "getWinner": "hardhat --network localhost run scripts/getWinner.js",
    "claim": "hardhat --network localhost run scripts/demo/claimPrize.js",
    "ff": "hardhat --network localhost run scripts/demo/fast-forward.js",
    "staging:raffle": "NODE_ENV=staging hardhat --network sepolia run scripts/demo/createRaffle.js",
    "staging:getRaffle": "NODE_ENV=staging hardhat --network sepolia run scripts/getRaffle.js",
    "staging:ticket": "NODE_ENV=staging hardhat --network sepolia run scripts/demo/buyTickets.js",
    "staging:role": "NODE_ENV=staging hardhat --network sepolia run scripts/grantRole.js",
    "staging:draw": "NODE_ENV=staging hardhat --network sepolia run scripts/demo/drawWinner.js",
    "staging:supply": "NODE_ENV=staging hardhat --network sepolia run scripts/demo/checkSupply.js",
    "staging:getRoles": "NODE_ENV=staging hardhat --network sepolia run scripts/getRoles.js",
    "staging:getWinner": "NODE_ENV=staging hardhat --network sepolia run scripts/getWinner.js",
    "staging:claim": "NODE_ENV=staging hardhat --network sepolia run scripts/demo/claimPrize.js",
    "env": "hardhat run scripts/printEnv.js"
